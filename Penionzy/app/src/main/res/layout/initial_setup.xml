<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/initial_setup">

    <LinearLayout
        android:id="@+id/ActionBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@drawable/customborder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/Logo"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:allowUndo="true"
            android:background="#497FDC"
            android:text="PENIONZY"
            android:textColor="#fff"
            android:layout_width="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:layout_below="@+id/ActionBar"
        android:background="#272A31"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="50dp"
        android:id="@+id/input_fileds"
        android:weightSum="1">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:layout_weight="0.87">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp">

                <TextView
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/labelName"
                    android:textSize="21sp"
                    android:textColor="#fff"
                    android:textAlignment="textEnd" />

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/inputName"
                    android:textColor="#fff"
                    android:layout_width="200dp"
                    android:textAlignment="textStart" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp">
            <TextView
                android:text="Income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/labelIncome"
                android:textSize="21sp"
                android:textColor="#fff"
                android:textAlignment="textEnd" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/inputIncome"
                android:textColor="#fff"
                android:layout_width="200dp"
                android:textAlignment="textStart" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp">
                <TextView
                    android:text="Work Type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/labelWork"
                    android:textSize="21sp"
                    android:textColor="#fff"
                    android:textAlignment="textEnd" />

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/inputWork"
                    android:textColor="#fff"
                    android:layout_width="200dp"
                    android:textAlignment="textStart" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp">
                <TextView
                    android:text="Family Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/labelFamily"
                    android:textSize="21sp"
                    android:textColor="#fff"
                    android:textAlignment="textEnd" />

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/inputFamily"
                    android:textColor="#fff"
                    android:layout_width="200dp"
                    android:textAlignment="textStart" />
            </TableRow>

        </TableLayout>

        <Button
            android:text="Ready!"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:background="#497FDC"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>
