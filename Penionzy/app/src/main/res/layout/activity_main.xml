<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.vymirs.penionzy.penionzy.View.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/banknotes"
        android:id="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/ActionBar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:alpha="0.85"
        android:layout_height="45dp">

        <Button
            android:id="@+id/buttonLogo"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="#1e5cb2"
            android:text="Penionzy"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:onClick="onClick"
            android:elevation="0dp" />

        <Button
            android:id="@+id/buttonHistory"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:background="#263344"
            android:text="History"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/buttonStats"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:background="#263344"
            android:text="Statistics"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:onClick="onClick"/>

        <LinearLayout
            android:id="@+id/buttonSettings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#263344"
            android:clickable="true"
            android:orientation="horizontal"
            android:onClick="onClick">

            <ImageView
                android:id="@+id/iconSettings"
                android:layout_width="45dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/settings"
                android:layout_margin="5dp" />
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/listExpenses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#263344"
        android:alpha="0.90"
        android:layout_above="@+id/fundsPanel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/infoPanel" />

    <LinearLayout
        android:id="@+id/fundsPanel"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@drawable/listborder"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="50dp">

        <Button
            android:id="@+id/buttonBalancePlus"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="#1f252d"
            android:text="+"
            android:textColor="#a8ffb0"
            android:textSize="30sp"
            android:layout_width="15dp"
            android:onClick="onClick" />

        <Button
            android:id="@+id/buttonBalance"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:background="#1e5cb2"
            android:text="$ 500"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_width="15dp"
            android:onClick="onClick"
            android:elevation="0dp"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonBalanceMinus"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="#1f252d"
            android:text="-"
            android:textColor="#ffa8a8"
            android:textSize="30sp"
            android:layout_width="15dp"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoPanel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#1e5cb2"
        android:alpha="0.85"
        android:weightSum="100"
        android:layout_below="@+id/ActionBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="100dp">

        <TextView
            android:text="Your daily balance is positive!"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView"
            android:layout_weight="29.66"
            android:textColor="#a8ffb0"
            android:gravity="center_vertical|center_horizontal|center"
            android:padding="10dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/progressBar"
            android:layout_weight="70" />

    </LinearLayout>

</RelativeLayout>
